{% comment %}
  Homepage Template - Visual design matching corporate site
{% endcomment %}

<script>
  // Add homepage class to main element
  document.querySelector('main').classList.add('homepage-main');
</script>

<div class="nuvoxel-homepage">
  <!-- Hero Section with Visual Background -->
  <section class="nuvoxel-hero">
    <div class="nuvoxel-hero-bg">
      <!-- Decorative elements -->
      <div class="nuvoxel-hero-grid"></div>
      <div class="nuvoxel-hero-gradient"></div>
    </div>
    <div class="nuvoxel-hero-container">
      <div class="nuvoxel-hero-content">
        <span class="nuvoxel-hero-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
          </svg>
          NuVoxel Shop
        </span>
        <h1 class="nuvoxel-hero-title">
          Enterprise Hardware &<br/>
          <span class="nuvoxel-hero-highlight">Crying Cloud</span> Merch
        </h1>
        <p class="nuvoxel-hero-description">
          Quality pre-owned datacenter equipment and exclusive merchandise from the Crying Cloud YouTube channel. From servers to networking gear, find what you need for your cloud journey.
        </p>
        <div class="nuvoxel-hero-buttons">
          <a href="{{ routes.all_products_collection_url }}" class="btn-primary btn-lg">
            Browse All Products
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-left: 8px;">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
          <a href="https://www.nuvoxel.com/company/contact" class="btn-secondary btn-lg">
            Contact Sales
          </a>
        </div>
      </div>
      <div class="nuvoxel-hero-visual">
        <div class="nuvoxel-hero-card nuvoxel-hero-card-1">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
          <span>Servers</span>
        </div>
        <div class="nuvoxel-hero-card nuvoxel-hero-card-2">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M5 12.55a11 11 0 0 1 14.08 0"></path>
            <path d="M1.42 9a16 16 0 0 1 21.16 0"></path>
            <path d="M8.53 16.11a6 6 0 0 1 6.95 0"></path>
            <line x1="12" y1="20" x2="12.01" y2="20"></line>
          </svg>
          <span>Networking</span>
        </div>
        <div class="nuvoxel-hero-card nuvoxel-hero-card-3">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
            <line x1="7" y1="7" x2="7.01" y2="7"></line>
          </svg>
          <span>Merch</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Collections with Large Images -->
  <section class="nuvoxel-featured">
    <div class="page-width">
      <div class="nuvoxel-section-header">
        <h2 class="nuvoxel-section-title">Shop by Category</h2>
        <p class="nuvoxel-section-subtitle">Browse our curated collections of enterprise hardware and exclusive merchandise</p>
      </div>
      <div class="nuvoxel-featured-grid">
        {% for collection in collections limit: 6 %}
          {% unless collection.handle == 'all' or collection.handle == 'frontpage' %}
            <a href="{{ collection.url }}" class="nuvoxel-featured-card">
              <div class="nuvoxel-featured-image">
                {% if collection.image %}
                  <img src="{{ collection.image | image_url: width: 600 }}"
                       alt="{{ collection.title }}"
                       loading="lazy">
                {% elsif collection.products.first.featured_image %}
                  <img src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
                       alt="{{ collection.title }}"
                       loading="lazy">
                {% else %}
                  <div class="nuvoxel-featured-placeholder">
                    {% case collection.handle %}
                      {% when 'memory' %}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <rect x="4" y="4" width="16" height="16" rx="2"></rect>
                          <rect x="9" y="9" width="6" height="6"></rect>
                          <line x1="9" y1="1" x2="9" y2="4"></line>
                          <line x1="15" y1="1" x2="15" y2="4"></line>
                          <line x1="9" y1="20" x2="9" y2="23"></line>
                          <line x1="15" y1="20" x2="15" y2="23"></line>
                          <line x1="20" y1="9" x2="23" y2="9"></line>
                          <line x1="20" y1="14" x2="23" y2="14"></line>
                          <line x1="1" y1="9" x2="4" y2="9"></line>
                          <line x1="1" y1="14" x2="4" y2="14"></line>
                        </svg>
                      {% when 'networking' %}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <rect x="9" y="2" width="6" height="6" rx="1"></rect>
                          <rect x="2" y="16" width="6" height="6" rx="1"></rect>
                          <rect x="16" y="16" width="6" height="6" rx="1"></rect>
                          <path d="M12 8v4"></path>
                          <path d="M5 16v-2a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v2"></path>
                        </svg>
                      {% when 'processors' %}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <rect x="4" y="4" width="16" height="16" rx="2"></rect>
                          <rect x="9" y="9" width="6" height="6"></rect>
                          <path d="M15 2v2"></path>
                          <path d="M15 20v2"></path>
                          <path d="M2 15h2"></path>
                          <path d="M2 9h2"></path>
                          <path d="M20 15h2"></path>
                          <path d="M20 9h2"></path>
                          <path d="M9 2v2"></path>
                          <path d="M9 20v2"></path>
                        </svg>
                      {% when 'storage' %}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                          <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path>
                          <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path>
                        </svg>
                      {% when 'servers' %}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect>
                          <rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect>
                          <line x1="6" y1="6" x2="6.01" y2="6"></line>
                          <line x1="6" y1="18" x2="6.01" y2="18"></line>
                        </svg>
                      {% when 'merch' %}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                          <line x1="7" y1="7" x2="7.01" y2="7"></line>
                        </svg>
                      {% else %}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
                          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                          <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                          <line x1="12" y1="22.08" x2="12" y2="12"></line>
                        </svg>
                    {% endcase %}
                  </div>
                {% endif %}
                <div class="nuvoxel-featured-overlay"></div>
              </div>
              <div class="nuvoxel-featured-content">
                <h3 class="nuvoxel-featured-title">{{ collection.title }}</h3>
                <p class="nuvoxel-featured-count">
                  {{ collection.products_count }} {% if collection.products_count == 1 %}product{% else %}products{% endif %}
                </p>
                <span class="nuvoxel-featured-link">
                  Shop Now
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </span>
              </div>
            </a>
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="nuvoxel-products-section">
    <div class="page-width">
      <div class="nuvoxel-section-header">
        <h2 class="nuvoxel-section-title">Featured Products</h2>
        <p class="nuvoxel-section-subtitle">Our most popular enterprise hardware and merchandise</p>
      </div>
      <div class="nuvoxel-products-grid">
        {% for product in collections.all.products limit: 8 %}
          <div class="nuvoxel-product-card">
            <a href="{{ product.url }}" class="nuvoxel-product-link">
              {% if product.featured_image %}
                <div class="nuvoxel-product-image">
                  <img src="{{ product.featured_image | image_url: width: 400 }}"
                       alt="{{ product.featured_image.alt | escape }}"
                       loading="lazy">
                  {% if product.compare_at_price > product.price %}
                    <span class="nuvoxel-badge-sale">Sale</span>
                  {% endif %}
                  {% unless product.available %}
                    <span class="nuvoxel-badge-soldout">Sold Out</span>
                  {% endunless %}
                </div>
              {% endif %}
              <div class="nuvoxel-product-details">
                <h3 class="nuvoxel-product-title">{{ product.title }}</h3>
                <div class="nuvoxel-product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="nuvoxel-price-compare">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="nuvoxel-price-current">{{ product.price | money }}</span>
                </div>
              </div>
            </a>
            {% if product.available %}
              <form action="{{ routes.cart_add_url }}" method="post" class="nuvoxel-quick-add-form">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="nuvoxel-quick-add">
                  Add to Cart
                </button>
              </form>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      <div class="nuvoxel-view-all">
        <a href="{{ routes.all_products_collection_url }}" class="btn-secondary">
          View All Products
        </a>
      </div>
    </div>
  </section>

  <!-- Trust Badges / Features -->
  <section class="nuvoxel-trust">
    <div class="page-width">
      <div class="nuvoxel-trust-grid">
        <div class="nuvoxel-trust-item">
          <div class="nuvoxel-trust-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="1 4 1 10 7 10"></polyline>
              <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
            </svg>
          </div>
          <h3>30-Day Returns</h3>
          <p>Not satisfied? Return any item within 30 days for a full refund</p>
        </div>
        <div class="nuvoxel-trust-item">
          <div class="nuvoxel-trust-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="1" y="3" width="15" height="13"></rect>
              <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
              <circle cx="5.5" cy="18.5" r="2.5"></circle>
              <circle cx="18.5" cy="18.5" r="2.5"></circle>
            </svg>
          </div>
          <h3>Fast Shipping</h3>
          <p>Quick processing and reliable delivery across the US</p>
        </div>
        <div class="nuvoxel-trust-item">
          <div class="nuvoxel-trust-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          </div>
          <h3>Secure Payment</h3>
          <p>Your payment information is always protected</p>
        </div>
        <div class="nuvoxel-trust-item">
          <div class="nuvoxel-trust-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <h3>Newsletter Deals</h3>
          <p>Subscribe for exclusive offers and new inventory alerts</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="nuvoxel-newsletter">
    <div class="page-width">
      <div class="nuvoxel-newsletter-container">
        <div class="nuvoxel-newsletter-content">
          <h2 class="nuvoxel-newsletter-title">Stay in the Loop</h2>
          <p class="nuvoxel-newsletter-subtitle">
            Get exclusive deals on enterprise hardware, early access to Crying Cloud merch drops, and updates on new inventory arrivals.
          </p>

          {% form 'customer' %}
            {% if form.posted_successfully? %}
              <div class="nuvoxel-newsletter-success">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                Thanks for subscribing! Check your email for a confirmation.
              </div>
            {% else %}
              <div class="nuvoxel-newsletter-form">
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input type="email"
                       name="contact[email]"
                       class="nuvoxel-newsletter-input"
                       placeholder="Enter your email address"
                       required>
                <button type="submit" class="btn-primary">
                  Subscribe
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-left: 8px;">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </button>
              </div>

              {% if form.errors %}
                <div class="nuvoxel-newsletter-error">
                  {{ form.errors | default_errors }}
                </div>
              {% endif %}
            {% endif %}
          {% endform %}

          <p class="nuvoxel-newsletter-privacy">
            We respect your privacy. Unsubscribe at any time.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="nuvoxel-cta">
    <div class="page-width">
      <h2 class="nuvoxel-cta-title">Need Help Finding the Right Equipment?</h2>
      <p class="nuvoxel-cta-description">
        Our team can help you identify the best hardware solutions for your specific needs, whether you're building a hybrid cloud environment or looking to liquidate assets.
      </p>
      <div class="nuvoxel-cta-buttons">
        <a href="{{ routes.all_products_collection_url }}" class="btn-primary btn-lg">Browse All Products</a>
        <a href="https://www.nuvoxel.com/company/contact" class="btn-secondary btn-lg">Contact Our Team</a>
      </div>
    </div>
  </section>
</div>

<style>
  .nuvoxel-homepage {
    padding: 0;
  }

  /* Hero Section */
  .nuvoxel-hero {
    position: relative;
    padding: 80px 24px;
    overflow: hidden;
    background: linear-gradient(to bottom right, #F8FAFC, #EFF6FF, #F8FAFC);
  }

  .nuvoxel-hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .nuvoxel-hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(22, 49, 114, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(22, 49, 114, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .nuvoxel-hero-gradient {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 80%;
    height: 150%;
    background: radial-gradient(ellipse, rgba(58, 129, 195, 0.15) 0%, transparent 70%);
  }

  .nuvoxel-hero-container {
    position: relative;
    max-width: 1280px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .nuvoxel-hero-container {
      grid-template-columns: 1fr 1fr;
      gap: 64px;
    }
  }

  .nuvoxel-hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 24px;
    font-size: 14px;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .nuvoxel-hero-badge svg {
    color: var(--color-accent);
  }

  .nuvoxel-hero-title {
    font-size: 40px;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 24px;
    color: var(--color-primary);
  }

  @media (min-width: 768px) {
    .nuvoxel-hero-title {
      font-size: 56px;
    }
  }

  .nuvoxel-hero-highlight {
    background: var(--gradient-cta);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nuvoxel-hero-description {
    font-size: 18px;
    color: var(--color-muted);
    line-height: 1.7;
    margin-bottom: 32px;
    max-width: 540px;
  }

  .nuvoxel-hero-buttons {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  @media (min-width: 640px) {
    .nuvoxel-hero-buttons {
      flex-direction: row;
    }
  }

  .nuvoxel-hero-visual {
    display: none;
    position: relative;
    height: 360px;
    width: 100%;
  }

  @media (min-width: 1024px) {
    .nuvoxel-hero-visual {
      display: block;
    }
  }

  .nuvoxel-hero-card {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 24px 32px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 40px rgba(22, 49, 114, 0.1);
    border: 1px solid var(--color-border);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    min-width: 130px;
  }

  .nuvoxel-hero-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 24px 48px rgba(22, 49, 114, 0.15);
  }

  .nuvoxel-hero-card svg {
    color: var(--color-secondary);
  }

  .nuvoxel-hero-card span {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-primary);
  }

  .nuvoxel-hero-card-1 {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    animation: float1 6s ease-in-out infinite;
  }

  .nuvoxel-hero-card-2 {
    bottom: 40px;
    left: 10%;
    animation: float2 6s ease-in-out infinite;
  }

  .nuvoxel-hero-card-3 {
    bottom: 40px;
    right: 10%;
    animation: float3 6s ease-in-out infinite;
  }

  @keyframes float1 {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-12px); }
  }

  @keyframes float2 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes float3 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .nuvoxel-hero-card-1:hover {
    transform: translateX(-50%) translateY(-4px);
  }

  /* Section Headers */
  .nuvoxel-section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .nuvoxel-section-title {
    font-size: 32px;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 12px;
  }

  .nuvoxel-section-subtitle {
    font-size: 18px;
    color: var(--color-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Featured Collections */
  .nuvoxel-featured {
    padding: 80px 0;
    background: white;
  }

  .nuvoxel-featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  @media (min-width: 1024px) {
    .nuvoxel-featured-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .nuvoxel-featured-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .nuvoxel-featured-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .nuvoxel-featured-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .nuvoxel-featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .nuvoxel-featured-card:hover .nuvoxel-featured-image img {
    transform: scale(1.05);
  }

  .nuvoxel-featured-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, #1e40af 100%);
