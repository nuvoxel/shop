<script>
  // Handle quantity changes
  document.querySelectorAll('.nuvoxel-quantity-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const line = this.dataset.line;
      const action = this.dataset.action;
      const input = document.querySelector(`.nuvoxel-quantity-input[data-line="${line}"]`);
      let value = parseInt(input.value);

      if (action === 'increase') {
        input.value = value + 1;
      } else if (action === 'decrease' && value > 0) {
        input.value = value - 1;
      }

      // Auto-submit form
      document.getElementById('cart-form').submit();
    });
  });

  // Handle remove item
  document.querySelectorAll('.nuvoxel-remove-item').forEach(btn => {
    btn.addEventListener('click', function() {
      const line = this.dataset.line;
      const input = document.querySelector(`.nuvoxel-quantity-input[data-line="${line}"]`);
      input.value = 0;
      document.getElementById('cart-form').submit();
    });
  });

  // Handle quantity input change
  document.querySelectorAll('.nuvoxel-quantity-input').forEach(input => {
    input.addEventListener('change', function() {
      document.getElementById('cart-form').submit();
    });
  });
</script>
