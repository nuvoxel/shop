{% comment %}
  Product Page Template - Visual design matching corporate site
{% endcomment %}

<div class="nuvoxel-product-page">
  <div class="page-width">
    <!-- Breadcrumbs -->
    <nav class="nuvoxel-breadcrumbs" aria-label="Breadcrumb">
      <a href="{{ routes.root_url }}">Home</a>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
      {% if collection %}
        <a href="{{ collection.url }}">{{ collection.title }}</a>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      {% endif %}
      <span>{{ product.title }}</span>
    </nav>

    <div class="nuvoxel-product-container">
      <!-- Product Images -->
      <div class="nuvoxel-product-gallery">
        {% if product.featured_image %}
          <div class="nuvoxel-main-image" id="mainImage">
            <img src="{{ product.featured_image | image_url: width: 800 }}"
                 alt="{{ product.featured_image.alt | escape }}"
                 id="mainImageSrc">
            {% if product.compare_at_price > product.price %}
              <span class="nuvoxel-badge-sale">Sale</span>
            {% endif %}
            {% unless product.available %}
              <span class="nuvoxel-badge-soldout">Sold Out</span>
            {% endunless %}
          </div>
        {% else %}
          <div class="nuvoxel-main-image nuvoxel-product-placeholder">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
          </div>
        {% endif %}

        {% if product.images.size > 1 %}
          <div class="nuvoxel-image-thumbnails">
            {% for image in product.images %}
              <button class="nuvoxel-thumbnail {% if forloop.first %}active{% endif %}"
                      data-image-url="{{ image | image_url: width: 800 }}"
                      onclick="changeImage(this, '{{ image | image_url: width: 800 }}')">
                <img src="{{ image | image_url: width: 120 }}"
                     alt="{{ image.alt | escape }}"
                     loading="lazy">
              </button>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Product Info -->
      <div class="nuvoxel-product-info">
        {% if product.vendor %}
          <p class="nuvoxel-product-vendor">{{ product.vendor }}</p>
        {% endif %}

        <h1 class="nuvoxel-product-title">{{ product.title }}</h1>

        <div class="nuvoxel-product-price-container">
          <div class="nuvoxel-product-price">
            {% if product.compare_at_price > product.price %}
              <span class="nuvoxel-price-compare">{{ product.compare_at_price | money }}</span>
            {% endif %}
            <span class="nuvoxel-price-current" id="productPrice">{{ product.price | money }}</span>
          </div>
          {% if product.compare_at_price > product.price %}
            <span class="nuvoxel-price-save">
              Save {{ product.compare_at_price | minus: product.price | money }}
            </span>
          {% endif %}
        </div>

        <!-- Inventory Status -->
        <div class="nuvoxel-inventory-status" id="inventoryStatus">
          {% assign current_variant = product.selected_or_first_available_variant %}
          {% if current_variant.inventory_management %}
            {% if current_variant.inventory_quantity > 10 %}
              <div class="nuvoxel-stock nuvoxel-stock-high">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                <span><strong>{{ current_variant.inventory_quantity }}</strong> in stock</span>
              </div>
            {% elsif current_variant.inventory_quantity > 0 %}
              <div class="nuvoxel-stock nuvoxel-stock-low">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="12" y1="8" x2="12" y2="12"></line>
                  <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
                <span>Only <strong>{{ current_variant.inventory_quantity }}</strong> left - order soon!</span>
              </div>
            {% elsif current_variant.inventory_policy == 'continue' %}
              <div class="nuvoxel-stock nuvoxel-stock-backorder">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <span>Available on backorder</span>
              </div>
            {% else %}
              <div class="nuvoxel-stock nuvoxel-stock-out">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="15" y1="9" x2="9" y2="15"></line>
                  <line x1="9" y1="9" x2="15" y2="15"></line>
                </svg>
                <span>Out of stock</span>
              </div>
            {% endif %}
          {% elsif current_variant.available %}
            <div class="nuvoxel-stock nuvoxel-stock-high">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>In stock</span>
            </div>
          {% else %}
            <div class="nuvoxel-stock nuvoxel-stock-out">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
              </svg>
              <span>Out of stock</span>
            </div>
          {% endif %}
        </div>

        <!-- Product Description -->
        {% if product.description != blank %}
          <div class="nuvoxel-product-description">
            {{ product.description }}
          </div>
        {% endif %}

        <!-- Product Form -->
        <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="nuvoxel-product-form">
          {% if product.has_only_default_variant == false %}
            <div class="nuvoxel-product-options">
              {% for option in product.options_with_values %}
                <div class="nuvoxel-option-group">
                  <label for="option-{{ option.name | handleize }}">{{ option.name }}</label>
                  <select name="options[{{ option.name | escape }}]"
                          id="option-{{ option.name | handleize }}"
                          class="nuvoxel-option-select">
                    {% for value in option.values %}
                      <option value="{{ value | escape }}" {% if option.selected_value == value %}selected{% endif %}>
                        {{ value }}
                      </option>
                    {% endfor %}
                  </select>
                </div>
              {% endfor %}
            </div>
          {% endif %}

          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

          <div class="nuvoxel-product-quantity">
            <label for="quantity">Quantity</label>
            <div class="nuvoxel-quantity-controls">
              <button type="button" class="nuvoxel-quantity-btn" onclick="decrementQuantity()">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
              </button>
              <input type="number" id="quantity" name="quantity" value="1" min="1" class="nuvoxel-quantity-input">
              <button type="button" class="nuvoxel-quantity-btn" onclick="incrementQuantity()">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="12" y1="5" x2="12" y2="19"></line>
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
              </button>
            </div>
          </div>

          <button type="submit" class="nuvoxel-add-to-cart btn-primary btn-lg"
                  {% unless product.available %}disabled{% endunless %}>
            {% if product.available %}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="9" cy="21" r="1"></circle>
                <circle cx="20" cy="21" r="1"></circle>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
              </svg>
              Add to Cart
            {% else %}
              Sold Out
            {% endif %}
          </button>
        </form>

        <!-- Trust Badges -->
        <div class="nuvoxel-product-trust">
          <div class="nuvoxel-trust-badge">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="1 4 1 10 7 10"></polyline>
              <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
            </svg>
            <span>30-Day Returns</span>
          </div>
          <div class="nuvoxel-trust-badge">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="1" y="3" width="15" height="13"></rect>
              <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
              <circle cx="5.5" cy="18.5" r="2.5"></circle>
              <circle cx="18.5" cy="18.5" r="2.5"></circle>
            </svg>
            <span>Fast Shipping</span>
          </div>
          <div class="nuvoxel-trust-badge">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            <span>Secure Payment</span>
          </div>
        </div>

        <!-- Product Meta -->
        <div class="nuvoxel-product-meta">
          {% if product.type %}
            <p><strong>Type:</strong> {{ product.type }}</p>
          {% endif %}
          {% if product.tags.size > 0 %}
            <p><strong>Tags:</strong>
              {% for tag in product.tags %}
                <span class="nuvoxel-tag">{{ tag }}</span>
              {% endfor %}
            </p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .nuvoxel-product-page {
    padding: 40px 0 80px;
    background: #F9FAFB;
  }

  .nuvoxel-breadcrumbs {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 32px;
    font-size: 14px;
  }

  .nuvoxel-breadcrumbs a {
    color: var(--color-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nuvoxel-breadcrumbs a:hover {
    color: var(--color-primary);
  }

  .nuvoxel-breadcrumbs svg {
    color: var(--color-muted-foreground);
  }

  .nuvoxel-breadcrumbs span {
    color: var(--color-primary);
    font-weight: 500;
  }

  .nuvoxel-product-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
  }

  @media (min-width: 1024px) {
    .nuvoxel-product-container {
      grid-template-columns: 1fr 1fr;
      gap: 64px;
    }
  }

  /* Product Gallery */
  .nuvoxel-product-gallery {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .nuvoxel-main-image {
    position: relative;
    aspect-ratio: 1;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  .nuvoxel-main-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .nuvoxel-product-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-muted-foreground);
  }

  .nuvoxel-badge-sale,
  .nuvoxel-badge-soldout {
    position: absolute;
    top: 16px;
    right: 16px;
    padding: 8px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .nuvoxel-badge-sale {
    background: var(--color-accent);
    color: white;
  }

  .nuvoxel-badge-soldout {
    background: var(--color-muted);
    color: white;
  }

  .nuvoxel-image-thumbnails {
    display: flex;
    gap: 12px;
    overflow-x: auto;
    padding: 4px;
  }

  .nuvoxel-thumbnail {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border: 2px solid var(--color-border);
    border-radius: 12px;
    cursor: pointer;
    background: white;
    padding: 4px;
    transition: border-color 0.2s;
    overflow: hidden;
  }

  .nuvoxel-thumbnail:hover {
    border-color: var(--color-secondary);
  }

  .nuvoxel-thumbnail.active {
    border-color: var(--color-primary);
  }

  .nuvoxel-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  /* Product Info */
  .nuvoxel-product-info {
    display: flex;
    flex-direction: column;
  }

  .nuvoxel-product-vendor {
    font-size: 14px;
    color: var(--color-secondary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .nuvoxel-product-title {
    font-size: 32px;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 20px;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .nuvoxel-product-title {
      font-size: 40px;
    }
  }

  .nuvoxel-product-price-container {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
    padding-bottom: 24px;
    border-bottom: 1px solid var(--color-border);
  }

  .nuvoxel-product-price {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nuvoxel-price-current {
    font-size: 32px;
    font-weight: 700;
    color: var(--color-primary);
  }

  .nuvoxel-price-compare {
    font-size: 20px;
    color: var(--color-muted);
    text-decoration: line-through;
  }

  .nuvoxel-price-save {
    display: inline-flex;
    padding: 6px 12px;
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.1), rgba(239, 68, 68, 0.1));
    color: var(--color-accent);
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
  }

  /* Inventory Status */
  .nuvoxel-inventory-status {
    margin-bottom: 24px;
  }

  .nuvoxel-stock {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-family: 'Amiko', sans-serif;
  }

  .nuvoxel-stock svg {
    flex-shrink: 0;
  }

  .nuvoxel-stock strong {
    font-weight: 700;
  }

  .nuvoxel-stock-high {
    background: rgba(34, 197, 94, 0.1);
    color: #16a34a;
  }

  .nuvoxel-stock-high svg {
    color: #16a34a;
  }

  .nuvoxel-stock-low {
    background: rgba(249, 115, 22, 0.1);
    color: #ea580c;
  }

  .nuvoxel-stock-low svg {
    color: #ea580c;
  }

  .nuvoxel-stock-backorder {
    background: rgba(59, 130, 246, 0.1);
    color: #2563eb;
  }

  .nuvoxel-stock-backorder svg {
    color: #2563eb;
  }

  .nuvoxel-stock-out {
    background: rgba(239, 68, 68, 0.1);
    color: #dc2626;
  }

  .nuvoxel-stock-out svg {
    color: #dc2626;
  }

  .nuvoxel-product-description {
    font-size: 16px;
    color: var(--color-muted);
    line-height: 1.7;
    margin-bottom: 32px;
  }

  .nuvoxel-product-description p {
    margin-bottom: 16px;
  }

  .nuvoxel-product-description ul,
  .nuvoxel-product-description ol {
    margin-left: 20px;
    margin-bottom: 16px;
  }

  /* Product Form */
  .nuvoxel-product-form {
    display: flex;
    flex-direction: column;
    gap: 24px;
    margin-bottom: 32px;
  }

  .nuvoxel-product-options {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .nuvoxel-option-group label {
    display: block;
    margin-bottom: 8px;
    font-size: 14px;
    font-weight: 600;
    color: var(--color-primary);
  }

  .nuvoxel-option-select {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid var(--color-border);
    border-radius: 10px;
    font-size: 16px;
    font-family: 'Amiko', sans-serif;
    background: white;
    color: var(--color-primary);
    cursor: pointer;
    transition: border-color 0.2s;
  }

  .nuvoxel-option-select:focus {
    outline: none;
    border-color: var(--color-secondary);
  }

  .nuvoxel-product-quantity label {
    display: block;
    margin-bottom: 8px;
    font-size: 14px;
    font-weight: 600;
    color: var(--color-primary);
  }

  .nuvoxel-quantity-controls {
    display: flex;
    align-items: center;
    gap: 0;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 10px;
    width: fit-content;
    overflow: hidden;
  }

  .nuvoxel-quantity-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-primary);
    transition: background 0.2s;
  }

  .nuvoxel-quantity-btn:hover {
    background: #F9FAFB;
  }

  .nuvoxel-quantity-input {
    width: 64px;
    height: 48px;
    padding: 0;
    border: none;
    border-left: 1px solid var(--color-border);
    border-right: 1px solid var(--color-border);
    font-size: 16px;
    font-family: 'Amiko', sans-serif;
    text-align: center;
    color: var(--color-primary);
    -moz-appearance: textfield;
  }

  .nuvoxel-quantity-input::-webkit-outer-spin-button,
  .nuvoxel-quantity-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .nuvoxel-add-to-cart {
    width: 100%;
    gap: 12px;
  }

  .nuvoxel-add-to-cart:disabled {
    background: var(--color-muted);
    cursor: not-allowed;
    box-shadow: none;
  }

  .nuvoxel-add-to-cart:disabled:hover {
    transform: none;
  }

  /* Trust Badges */
  .nuvoxel-product-trust {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    padding: 24px;
    background: white;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    margin-bottom: 32px;
  }

  .nuvoxel-trust-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--color-muted);
    font-size: 14px;
  }

  .nuvoxel-trust-badge svg {
    color: var(--color-secondary);
  }

  /* Product Meta */
  .nuvoxel-product-meta {
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
  }

  .nuvoxel-product-meta p {
    margin-bottom: 8px;
    font-size: 14px;
    color: var(--color-muted);
  }

  .nuvoxel-product-meta strong {
    color: var(--color-primary);
  }

  .nuvoxel-tag {
    display: inline-block;
    padding: 4px 10px;
    background: #F3F4F6;
    color: var(--color-muted);
    border-radius: 6px;
    font-size: 12px;
    margin-right: 6px;
    margin-bottom: 6px;
  }

  @media (max-width: 768px) {
    .nuvoxel-product-page {
      padding: 24px 0 48px;
    }

    .nuvoxel-product-title {
      font-size: 28px;
    }

    .nuvoxel-price-current {
      font-size: 28px;
    }
  }
</style>

<script>
  // Product variants data for dynamic updates
  const productVariants = [
    {% for variant in product.variants %}
    {
      id: {{ variant.id }},
      title: "{{ variant.title | escape }}",
      price: {{ variant.price }},
      priceFormatted: "{{ variant.price | money }}",
      available: {{ variant.available }},
      inventoryManagement: {{ variant.inventory_management | json }},
      inventoryQuantity: {{ variant.inventory_quantity | default: 0 }},
      inventoryPolicy: "{{ variant.inventory_policy }}",
      options: {{ variant.options | json }}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ];

  function changeImage(button, url) {
    document.getElementById('mainImageSrc').src = url;
    document.querySelectorAll('.nuvoxel-thumbnail').forEach(t => t.classList.remove('active'));
    button.classList.add('active');
  }

  function incrementQuantity() {
    const input = document.getElementById('quantity');
    input.value = parseInt(input.value) + 1;
  }

  function decrementQuantity() {
    const input = document.getElementById('quantity');
    if (parseInt(input.value) > 1) {
      input.value = parseInt(input.value) - 1;
    }
  }

  // Find variant by selected options
  function getSelectedVariant() {
    const selects = document.querySelectorAll('.nuvoxel-option-select');
    const selectedOptions = Array.from(selects).map(s => s.value);

    return productVariants.find(variant => {
      return variant.options.every((opt, idx) => opt === selectedOptions[idx]);
    });
  }

  // Update inventory display
  function updateInventoryDisplay(variant) {
    const container = document.getElementById('inventoryStatus');
    if (!container || !variant) return;

    let html = '';
    const checkIcon = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>`;
    const warningIcon = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>`;
    const clockIcon = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>`;
    const xIcon = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>`;

    if (variant.inventoryManagement) {
      if (variant.inventoryQuantity > 10) {
        html = `<div class="nuvoxel-stock nuvoxel-stock-high">${checkIcon}<span><strong>${variant.inventoryQuantity}</strong> in stock</span></div>`;
      } else if (variant.inventoryQuantity > 0) {
        html = `<div class="nuvoxel-stock nuvoxel-stock-low">${warningIcon}<span>Only <strong>${variant.inventoryQuantity}</strong> left - order soon!</span></div>`;
      } else if (variant.inventoryPolicy === 'continue') {
        html = `<div class="nuvoxel-stock nuvoxel-stock-backorder">${clockIcon}<span>Available on backorder</span></div>`;
      } else {
        html = `<div class="nuvoxel-stock nuvoxel-stock-out">${xIcon}<span>Out of stock</span></div>`;
      }
    } else if (variant.available) {
      html = `<div class="nuvoxel-stock nuvoxel-stock-high">${checkIcon}<span>In stock</span></div>`;
    } else {
      html = `<div class="nuvoxel-stock nuvoxel-stock-out">${xIcon}<span>Out of stock</span></div>`;
    }

    container.innerHTML = html;
  }

  // Update price display
  function updatePriceDisplay(variant) {
    const priceEl = document.getElementById('productPrice');
    if (priceEl && variant) {
      priceEl.textContent = variant.priceFormatted;
    }
  }

  // Update add to cart button
  function updateAddToCartButton(variant) {
    const btn = document.querySelector('.nuvoxel-add-to-cart');
    const variantInput = document.querySelector('input[name="id"]');

    if (btn && variant) {
      variantInput.value = variant.id;

      if (variant.available) {
        btn.disabled = false;
        btn.innerHTML = `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg> Add to Cart`;
      } else {
        btn.disabled = true;
        btn.innerHTML = 'Sold Out';
      }
    }
  }

  // Listen for option changes
  document.querySelectorAll('.nuvoxel-option-select').forEach(select => {
    select.addEventListener('change', function() {
      const variant = getSelectedVariant();
      if (variant) {
        updateInventoryDisplay(variant);
        updatePriceDisplay(variant);
        updateAddToCartButton(variant);
      }
    });
  });
</script>
