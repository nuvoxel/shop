{% comment %}
  NuVoxel Custom Header - Matches the main app navigation
{% endcomment %}

<nav class="nuvoxel-nav">
  <div class="nuvoxel-nav-container">
    <!-- Logo -->
    <a href="https://www.nuvoxel.com/" class="nuvoxel-logo">
      <img src="{{ 'nuvoxel-logo.svg' | asset_url }}" alt="NuVoxel" height="40" />
    </a>

    <!-- Navigation Links -->
    <div class="nuvoxel-nav-links">
      <a href="https://www.nuvoxel.com/#products" class="nuvoxel-nav-link">Products</a>
      <a href="https://www.nuvoxel.com/pricing" class="nuvoxel-nav-link">Pricing</a>
      <a href="https://www.nuvoxel.com/ripoff" class="nuvoxel-nav-link">Cloud Ripoff</a>
      <a href="{{ shop.url }}" class="nuvoxel-nav-link nuvoxel-nav-link-active">Shop</a>
      <a href="https://www.nuvoxel.com/contact-sales" class="nuvoxel-nav-link">Contact Us</a>
      
      <!-- Cart Icon -->
      <a href="{{ routes.cart_url }}" class="nuvoxel-cart-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        {% if cart.item_count > 0 %}
          <span class="nuvoxel-cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
  </div>
</nav>

<style>
  .nuvoxel-nav {
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
  }

  .nuvoxel-nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
  }
  
  @media (min-width: 640px) {
    .nuvoxel-nav-container {
      padding: 12px 24px;
    }
  }

  .nuvoxel-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .nuvoxel-logo img {
    height: 28px;
    width: auto;
  }
  
  @media (min-width: 640px) {
    .nuvoxel-logo img {
      height: 36px;
    }
  }

  .nuvoxel-nav-links {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .nuvoxel-nav-link {
    color: #163172;
    text-decoration: none;
    font-size: 16px;
    font-family: 'Amiko', -apple-system, BlinkMacSystemFont, sans-serif;
    transition: color 0.2s;
  }

  .nuvoxel-nav-link:hover {
    color: #0e1e42;
  }

  .nuvoxel-nav-link-active {
    color: #0e1e42;
    font-weight: 600;
  }

  .nuvoxel-cart-link {
    position: relative;
    display: flex;
    align-items: center;
    color: #163172;
    text-decoration: none;
    transition: color 0.2s;
  }

  .nuvoxel-cart-link:hover {
    color: #0e1e42;
  }

  .nuvoxel-cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #163172;
    color: white;
    font-size: 11px;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  @media (max-width: 768px) {
    .nuvoxel-nav-links {
      gap: 12px;
    }
    
    .nuvoxel-nav-link {
      font-size: 12px;
    }

    .nuvoxel-nav-link:not(.nuvoxel-nav-link-active):not(.nuvoxel-cart-link) {
      display: none;
    }
  }
</style>