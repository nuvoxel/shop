{% comment %}
  NuVoxel Custom Header - Matches corporate site navigation exactly
{% endcomment %}

<nav class="nuvoxel-nav">
  <div class="nuvoxel-nav-container">
    <!-- Logo -->
    <a href="https://www.nuvoxel.com/" class="nuvoxel-logo">
      <img src="{{ 'nuvoxel-logo.svg' | asset_url }}" alt="NuVoxel" />
    </a>

    <!-- Navigation Links -->
    <div class="nuvoxel-nav-links">
      <a href="https://www.nuvoxel.com/#hydrogen" class="nuvoxel-nav-link">Hydrogen</a>
      <a href="https://www.nuvoxel.com/company/pricing" class="nuvoxel-nav-link">Pricing</a>
      <a href="https://www.nuvoxel.com/marketing/ripoff" class="nuvoxel-nav-link">Cloud Ripoff</a>
      <a href="{{ shop.url }}" class="nuvoxel-nav-link nuvoxel-nav-link-active">Shop</a>
      <a href="https://www.nuvoxel.com/company/contact" class="nuvoxel-nav-link">Contact Us</a>

      <!-- Cart Icon -->
      <a href="{{ routes.cart_url }}" class="nuvoxel-cart-link" aria-label="Cart">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        {% if cart.item_count > 0 %}
          <span class="nuvoxel-cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>

      <!-- Try Hydrogen Button -->
      <a href="https://hydrogen.nuvoxel.com" class="nuvoxel-try-hydrogen">
        Try Hydrogen
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button class="nuvoxel-mobile-menu-btn" aria-label="Menu" onclick="toggleMobileMenu()">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div class="nuvoxel-mobile-menu" id="mobileMenu">
    <a href="https://www.nuvoxel.com/#hydrogen" class="nuvoxel-mobile-link">Hydrogen</a>
    <a href="https://www.nuvoxel.com/company/pricing" class="nuvoxel-mobile-link">Pricing</a>
    <a href="https://www.nuvoxel.com/marketing/ripoff" class="nuvoxel-mobile-link">Cloud Ripoff</a>
    <a href="{{ shop.url }}" class="nuvoxel-mobile-link nuvoxel-mobile-link-active">Shop</a>
    <a href="https://www.nuvoxel.com/company/contact" class="nuvoxel-mobile-link">Contact Us</a>
    <a href="{{ routes.cart_url }}" class="nuvoxel-mobile-link">
      Cart {% if cart.item_count > 0 %}({{ cart.item_count }}){% endif %}
    </a>
    <a href="https://hydrogen.nuvoxel.com" class="nuvoxel-mobile-cta">
      Try Hydrogen
    </a>
  </div>
</nav>

<style>
  .nuvoxel-nav {
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.90);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--color-border);
  }

  .nuvoxel-nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    max-width: 1280px;
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .nuvoxel-nav-container {
      padding: 12px 24px;
    }
  }

  .nuvoxel-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .nuvoxel-logo img {
    height: 28px;
    width: auto;
  }

  @media (min-width: 640px) {
    .nuvoxel-logo img {
      height: 36px;
    }
  }

  .nuvoxel-nav-links {
    display: none;
    align-items: center;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .nuvoxel-nav-links {
      display: flex;
    }
  }

  .nuvoxel-nav-link {
    color: var(--color-foreground);
    opacity: 0.8;
    text-decoration: none;
    font-size: 14px;
    font-family: 'Amiko', -apple-system, BlinkMacSystemFont, sans-serif;
    transition: opacity 0.2s, color 0.2s;
    white-space: nowrap;
  }

  .nuvoxel-nav-link:hover {
    opacity: 1;
    color: var(--color-primary);
  }

  .nuvoxel-nav-link-active {
    opacity: 1;
    color: var(--color-primary);
    font-weight: 600;
  }

  .nuvoxel-cart-link {
    position: relative;
    display: flex;
    align-items: center;
    color: var(--color-foreground);
    opacity: 0.8;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .nuvoxel-cart-link:hover {
    opacity: 1;
  }

  .nuvoxel-cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: var(--color-accent);
    color: white;
    font-size: 11px;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  .nuvoxel-try-hydrogen {
    display: inline-flex;
    align-items: center;
    padding: 8px 16px;
    background: var(--color-primary);
    color: white;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    font-family: 'Amiko', sans-serif;
    transition: background 0.2s;
    text-decoration: none;
  }

  .nuvoxel-try-hydrogen:hover {
    background: var(--color-primary-hover);
  }

  /* Mobile Menu Button */
  .nuvoxel-mobile-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-foreground);
  }

  @media (min-width: 768px) {
    .nuvoxel-mobile-menu-btn {
      display: none;
    }
  }

  /* Mobile Menu */
  .nuvoxel-mobile-menu {
    display: none;
    flex-direction: column;
    padding: 16px;
    background: white;
    border-top: 1px solid var(--color-border);
  }

  .nuvoxel-mobile-menu.open {
    display: flex;
  }

  @media (min-width: 768px) {
    .nuvoxel-mobile-menu {
      display: none !important;
    }
  }

  .nuvoxel-mobile-link {
    padding: 12px 0;
    color: var(--color-foreground);
    text-decoration: none;
    font-size: 16px;
    border-bottom: 1px solid var(--color-border);
  }

  .nuvoxel-mobile-link:last-of-type {
    border-bottom: none;
  }

  .nuvoxel-mobile-link-active {
    color: var(--color-primary);
    font-weight: 600;
  }

  .nuvoxel-mobile-cta {
    display: block;
    margin-top: 16px;
    padding: 12px 24px;
    background: var(--color-primary);
    color: white;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
  }
</style>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobileMenu');
    menu.classList.toggle('open');
  }
</script>
